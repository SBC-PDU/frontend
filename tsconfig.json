{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["src/*"]
		 }
	},
	"types": [
		"vue3-toastify/global",
		"vite-plugin-vue-layouts/client",
		"vite-plugin-pages/client"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"eslint.config.mjs",
		"shims.d.ts",
		"vite.config.ts"
	],
	"exclude": [
		"node_modules"
	]
}
